<h1>Eat Da Burger!</h1>
<br>

<div id='available'>
    <h2>Burgers to devour:</h2>
    <ul>
        {{#each burgers}} {{#unless this.devoured}}
        <li>
            {{this.id}}. {{this.burger_name}}

            {{!-- <form action="/{{this.id}}?_method=PUT" method="POST"> --}}
                <input type="hidden" name="devoured" value="false">
                <button class="devourButton btn-warning btn-sm" data-id={{this.id}} data-devoured={{this.devoured}} type="submit">Eat Me!</button>
            {{!-- </form> --}}

        </li>
        {{/unless}} {{/each}}
    </ul>
</div>
<div id='devoured'>
    <h2>Burgers That Have <br>Been Devoured: </h2>

    <ul>
        {{#each burgers}} {{#if this.devoured}}
        <li>
            {{this.id}}. {{this.burger_name}}
        </li>
        {{/if}} {{/each}}
    </ul>
</div>

<div id='add'>
    <h2>Add a Burger: </h2>

    <form class="create-update-form" method="POST">
        <div class="form-group">
            <label for="dab">Burger Name:</label>
            <input type="text" id="dab" name="burger_name">
        </div>
        <button class="btn btn-primary" type="submit">Add Burger</button>
    </form>
</div>